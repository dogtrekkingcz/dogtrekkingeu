@using PetsOnTrailApp.Components
@using PetsOnTrailApp.Shared
@using SharedLib.Models
@inject IStringLocalizer<Resource> localizer

<section>
    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.Name"]</label>
        <input type="text" @bind="@Model.FirstName" autocomplete="given-name" required />
    </div>

    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.Surname"]</label>
        <input type="text" @bind="@Model.LastName" autocomplete="family-name" required />
    </div>
    
    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.Email"]</label>
        <input type="email" @bind="@Model.Email" autocomplete="email" required />
    </div>
    
    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.Phone"]</label>
        <input type="tel" @bind="@Model.Phone" autocomplete="tel-local" required />
    </div>

    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.AddressStreet"]</label>
        <input type="text" @bind="@Model.Address.Street" autocomplete="street-address" />
    </div>
    
    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.AddressCity"]</label>
        <input type="text" @bind="@Model.Address.City" autocomplete="address-level2" />
    </div>
    
    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.AddressZipCode"]</label>
        <input type="text" @bind="@Model.Address.ZipCode" autocomplete="postal-code" />
    </div>

    <div class="nice-form-group">
        <label>@localizer["Action.CreateEntry.Person.Birthday"]</label>
        <InputDateTime id="birthday" class="form-control col-sm-8" @bind-Value="@Model.Birthday"></InputDateTime>
    </div>
</section>

@code {
    [Parameter]
    public EntryModel Model { get; set; }
}