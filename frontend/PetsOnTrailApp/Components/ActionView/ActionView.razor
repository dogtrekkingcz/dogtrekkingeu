@page "/action/{ActionId}"

@inherits ActionViewBase

@inject IStringLocalizer<Resource> Localizer

<h3>ActionView</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <div>
        <h3>@Localizer["Action"]</h3>
        <hr />
        <button class="btn btn-info" @onclick="(() => NavigateToRaces())">@Localizer["Races"]</button>
    </div>
}

