@inherits ExcelTableBase

<div class="container">
    <div class="row">
        @foreach (var column in Columns)
        {
            <div class="col">
                <button @onclick="() => ShowColumn(column)">Show</button>
                <button @onclick="() => HideColumn(column)">Hide</button>
                <button @onclick="() => SortBy(column)">Sort</button>
            </div>
        }
    </div>
</div>
<table class="excel-table">
    <thead>
        <tr>
            @foreach (var column in Columns)
            {
                if (!column.Hidden)
                {
                    <th @onmousedown="@(e => OnMouseDown(e, column))" style="width: @(column.Width)px;">
                        @column.Header
                        <button @onclick="() => HideColumn(column)">Hide</button>
                        <button @onclick="() => SortBy(column)">Sort</button>
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Data)
        {
            <tr>
                @foreach (var column in Columns)
                {
                    if (!column.Hidden)
                    {
                        <td style="width: @(column.Width)px;">
                            @switch (column.Type)
                            {
                                case ColumnDefinition.ColumnType.Text:
                                case ColumnDefinition.ColumnType.Number:
                                    <input @bind="@row[column.Id]" />
                                    break;

                                case ColumnDefinition.ColumnType.Date:
                                    <PetsOnTrailApp.Components.General.DateTimeInput.DateTimeInput Value="@((DateTimeOffset?) row[column.Id])" />
                                    break;

                                default:
                                    <input @bind="@row[column.Id]" />
                                    break;
                            }
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
